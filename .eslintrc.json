{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "semi": ["error", "always"],
        "no-unused-vars": "warn",
        "no-trailing-spaces": "error",
        "max-len": ["error", { "code": 150, "tabWidth": 4 }]
    }
}
